<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texte_du_noeud_en_cours"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/border_texte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.838" />

    <Button
        android:id="@+id/bouton_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginLeft="212dp"
        app:layout_constraintStart_toStartOf="@+id/texte_du_noeud_en_cours"
        app:layout_constraintTop_toBottomOf="@+id/texte_du_noeud_en_cours" />

    <TextView
        android:id="@+id/nom_personnage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_nom"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toTopOf="@+id/texte_du_noeud_en_cours"
        app:layout_constraintStart_toStartOf="@+id/texte_du_noeud_en_cours" />
</androidx.constraintlayout.widget.ConstraintLayout>